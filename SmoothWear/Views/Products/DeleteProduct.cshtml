@model SmoothWear.Models.Tbl_ProductDetails

@{
    ViewBag.Title = "Delete Product";
}
<style>
    dt,dd{
        color: aliceblue;
    }
</style>
<h2 class="text-danger text-center">Delete Product</h2>

<hr />

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="alert alert-warning">
            <strong>Are you sure you want to delete this product?</strong>
        </div>

        <dl class="dl-horizontal">
            <dt>Product Name:</dt>
            <dd>@Model.ProductName</dd>

            <dt>Category:</dt>
            <dd>@Model.ProductCategory</dd>

            <dt>Cost:</dt>
            <dd>₹@Model.Cost</dd>

            <dt>Description:</dt>
            <dd>@Model.Description</dd>

            <dt>Image:</dt>
            <dd>
                @if (!string.IsNullOrEmpty(Model.ProductImage))
                {
                    <img src="@Url.Content(Model.ProductImage)" alt="Product Image" style="height: 80px;" />
                }
            </dd>
        </dl>

        @using (Html.BeginForm("Delete", "Products", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ProductId)

            <div class="form-group text-center">
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
            </div>
        }
    </div>
</div>
